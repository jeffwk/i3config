!!
!! rxvt-unicode
!!

URxvt.iso14755: false
URxvt*scrollBar: false
URxvt.internalBorder:  16
URxvt.saveLines: 30000

URxvt.perl-ext:
URxvt.perl-ext-common: resize-font
URxvt.keysym.C-plus:  resize-font:bigger
URxvt.keysym.C-equal: resize-font:bigger
URxvt.keysym.C-0: resize-font:reset
URxvt.keysym.C-): resize-font:show
URxvt.resize-font.step: 2

! URxvt.letterSpace: 1

!! do not scroll with output
URxvt*scrollTtyOutput: false
!! scroll in relation to buffer [with mouse scroll or Shift+Page Up]
URxvt*scrollWithBuffer: true
!! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true

!! fix scrolling in program screens (such as emacs)
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0
!! needs aur/rxvt-unicode-better-wheel-scrolling-unicode3
URxvt.secondaryWheel: 1

!! Disable printing the terminal contents when pressing PrintScreen.
URxvt.print-pipe: "cat > /dev/null"

!! background transparency
! URxvt*depth: 32
! URxvt*foreground: white
! URxvt*background: rgba:1212/1212/1212/aaaa
! URxvt*background: rgba:1212/1212/1212/8888

! URxvt*font: xft:Inconsolata for Powerline:pixelsize=27
! URxvt*font: xft:Sauce Code Pro:pixelsize=29
! URxvt*font: xft:Courier Prime Code:pixelsize=36
! URxvt*font: xft:Ubuntu Mono:pixelsize=36
! URxvt*font: xft:Monaco:pixelsize=32
! URxvt*font: xft:Sauce Code Pro Medium-11
! URxvt*font: xft:InconsolataGo Nerd Font:pixelsize=30
! URxvt*font: xft:Inconsolata Nerd Font:pixelsize=30
! URxvt*font: xft:AnkaCoder Nerd Font:pixelsize=26
! URxvt*font: xft:Inconsolata Nerd Font:pixelsize=32
! URxvt*font: xft:Input Mono:pixelsize=23
! URxvt*font: xft:Input Mono Medium:pixelsize=27
! URxvt*font: xft:InputMono Nerd Font:pixelsize=23
URxvt*font: xft:InputMono Nerd Font:pixelsize=22


