set $dp2         3
set $dp1_set     -b 6 setvcp
set $dp2_set     -b 3 setvcp

bindsym $S+equal          exec --no-startup-id   change-brightness $dp1 + 4
bindsym $S+minus          exec --no-startup-id   change-brightness $dp1 - 4
# bindsym $S+backslash      exec --no-startup-id   $ddc $dp1_set $ddc_bright 92
bindsym $S+backslash      exec --no-startup-id   change-brightness $dp1 92
bindsym $S+0              exec --no-startup-id   change-brightness $dp1 72

bindsym $C+$S+equal       exec --no-startup-id   change-brightness $dp2 + 2
bindsym $C+$S+minus       exec --no-startup-id   change-brightness $dp2 - 2
bindsym $C+$S+backslash   exec --no-startup-id   change-brightness $dp2 96
bindsym $C+$S+0           exec --no-startup-id   change-brightness $dp2 86

# ddcutil -l 'PA32U' setvcp 60 0x14
bindsym $S+1              exec --no-startup-id   $ddc $dp1_set $ddc_input 0x14
